<resources>

    <style name="AppCommon" parent="Theme.AppCompat.Light">
        <item name="android:activatedBackgroundIndicator">@drawable/default_selector</item>
        <item name="drawerArrowStyle">@style/DrawerArrowToggle</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme" parent="AppCommon" />

    <style name="DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/black</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/action_bar_bg</item>
    </style>

</resources>
